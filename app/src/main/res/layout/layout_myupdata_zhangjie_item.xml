<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/myupdata_book_zhangjie_item_name"
        android:layout_marginTop="12dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:text="【第一节】如何说客户才会听懂"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginLeft="1dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/myupdata_book_zhangjie_item_name"
        android:src="@drawable/myupdata_item_time"
        android:layout_width="18dp"
        android:layout_height="18dp" />

    <TextView
        android:textSize="15sp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="18dp"
        android:id="@+id/myupdata_book_zhangjie_item_time"
        android:layout_below="@+id/myupdata_book_zhangjie_item_name"
        android:text="19:34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/rightjian_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
